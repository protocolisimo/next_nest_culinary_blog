datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id    String @id
  name  String?
  recipes Recipe[]
}

model Recipe {
  id        String      @id
  title     String
  author    User?    @relation(fields: [authorId], references: [id])
  authorId  String?
}

